{
  "name": "api",
  "version": "1.0.0",
  "description": "Yendric Api",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yendric/toodl-api"
  },
  "scripts": {
    "build": "tsc -p .",
    "serve": "node dist/server.js",
    "dev": "set DEBUG=true && ts-node-dev --respawn --transpile-only ./src/server.ts",
    "test": "jest --forceExit --coverage --verbose",
    "migrate": "tsc src/database/migrations/* --outdir dist/migrations && npx sequelize-cli db:migrate --url 'sqlite:./database.sqlite' --migrations-path dist/migrations"
  },
  "author": "Yendric Van Roey",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.14.0",
    "google-auth-library": "^7.6.2",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.4.11",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.13.0",
    "sequelize-typescript": "^2.1.2",
    "socket.io": "^4.4.1",
    "sqlite3": "npm:@vscode/sqlite3@5.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.9",
    "@types/node-cron": "^3.0.1",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.4.0",
    "jest": "^27.4.7",
    "prettier": "2.5.1",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  }
}
